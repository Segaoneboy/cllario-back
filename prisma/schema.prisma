generator client {
  provider = "prisma-client-js"
  // previewFeatures и engineType здесь не нужны для стандартной Node.js среды
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Вставьте сюда ваши модели (User, Test, DevelopmentPlan) ---

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String

  test Test[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Test {
  id      String @id @default(cuid())
  results Json

  userId String
  user   User   @relation(fields: [userId], references: [id])

  plan DevelopmentPlan?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DevelopmentPlan {
  id              String  @id @default(cuid())
  summary         String?
  strengths       Json?
  weaknesses      Json?
  developmentPlan Json?
  testId          String  @unique
  test            Test    @relation(fields: [testId], references: [id])
}
